@using InventoryManagementSystem.BLL.Dto.CategoryDtos
@model List<CategoryReadDto>

<!-- Start Landing Section -->
<section id="landing" class="landing">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="image">
            <img src="Image/hero_1.png" alt="Hero Image">
        </div>
        <div class="intro-text">
            <h1>Finding Your Perfect Shoes</h1>
            <p>
                Discover the latest trends and exclusive styles. Step into comfort and fashion with our amazing shoe collection.
            </p>
            <button class="shop-btn">SHOP NOW</button>
        </div>
    </div>
</section>
<!-- End Landing Section -->
<!-- Start About Us Section -->
<section id="aboutus" class="features">
    <div class="container d-flex justify-content-around text-center">
        <div class="feet">
            <i class="fa-solid fa-truck fa-3x"></i>
            <div class="text">
                <h3>FREE SHIPPING</h3>
                <p>
                    Enjoy free shipping on all orders with no minimum purchase required.
                </p>
            </div>
        </div>
        <div class="feet">
            <i class="fa-solid fa-rotate-right fa-3x"></i>
            <div class="text">
                <h3>FREE RETURNS</h3>
                <p>
                    Hassle-free returns within 30 days of purchase.
                </p>
            </div>
        </div>
        <div class="feet">
            <i class="fa-solid fa-headset fa-3x"></i>
            <div class="text">
                <h3>CUSTOMER SUPPORT</h3>
                <p>
                    24/7 customer support for all your inquiries.
                </p>
            </div>
        </div>
    </div>
</section>
<!-- End About Us Section -->
<!-- Start Category Section -->
<section class="category">
    <div class="container">
        <h2 class="category-title">Categories</h2>
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var category in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="@category.Name" alt="@category.Name">
                            <div class="card-body">
                                <h5 class="card-title">@category.Name</h5>
                                <a href="@Url.Action("CategoryDetails", "Category", new { id = category.CategoryId })" class="category-link">Shop Now</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p>No categories available at the moment.</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- End Category Section -->
<!-- Start Footer -->
<footer>
    <div class="container">
        <h3 class="social-title">Follow Us</h3>
        <div class="icons">
            <i class="fa fa-facebook"></i>
            <i class="fa fa-twitter"></i>
            <i class="fa fa-instagram"></i>
        </div>
        <p class="copy-right">
            © 2024 Your Company. All rights reserved. <a href="#" class="active">Terms & Conditions</a>
        </p>
    </div>
</footer>
<!-- End Footer -->
