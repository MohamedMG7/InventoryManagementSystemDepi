<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementSystem.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Custom Header with Search and Icons -->
    <header>
        <div class="container">

            <div class="right-menu">
                <a href="/Account/Login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/Account/Register" class="btn btn-primary">Register</a>
                <a href="" class="btn btn-primary">Details</a>
            </div>
            <div class="left-menu">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input class="search" type="text" placeholder="search">
            </div>
            <div>
                <i class="fa-solid fa-cart-shopping"></i>
                <i class="fa-solid fa-user"></i>
                <i class="fa-solid fa-heart"></i>
            </div>

        </div>
    </header>

    <!-- Custom Navigation Menu -->
    <nav>
        <div class="container">
            <ul class="links">
                <a href="">
                <li>HOME</li></a>
                <a href="">
                <li>ABOUT</li></a>
                <a href="">
                <li>SHOP</li></a>
                <a href="">
                <li>CATEGORIES</li></a>
                <a href="">
                <li>NEW ARRIVALS</li></a>
                <a href="">
                <li>CONTACT</li></a>
            </ul>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - InventoryManagementSystem.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

